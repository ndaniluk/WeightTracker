            <label asp-for="Waist" class="control-label"></label>
            <input type="number" asp-for="Waist" class="form-control" />
            <span asp-validation-for="Waist" class="text-danger"></span>
         </div>
         <div class="form-group">
            <label asp-for="Hips" class="control-label"></label>
            <input type="number" asp-for="Hips" class="form-control" />
            <span asp-validation-for="Hips" class="text-danger"></span>
