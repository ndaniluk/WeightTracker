@{
    ViewData["Title"] = "Log in";
}

@model LoginInfo

@using (Html.BeginForm("", "Login", FormMethod.Post))
{
    <fieldset>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <table>
            <tr>
                <td>@Html.LabelFor(login => login.Username)</td>
                <td>@Html.TextBoxFor(login => login.Username)</td>
                <td>@Html.ValidationMessageFor(login => login.Username)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(login => login.Password)</td>
                <td>@Html.TextBoxFor(login => login.Password)</td>
                <td>@Html.ValidationMessageFor(login => login.Password)</td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Login"/>
                </td>
                <td></td>
            </tr>
        </table>
    </fieldset>
}